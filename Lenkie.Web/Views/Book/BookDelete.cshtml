@using Lenkie.Web.Models.DTO;
@model BookDTO

<form asp-action="BookDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Book Product</h1>
        <input asp-for="BookId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Book Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BookName" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Book Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BookAuthor" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Inventory Count</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="InventoryCount" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="BookIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
